<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="40.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.buet.SalaryController">
    <children>
      <HBox prefHeight="494.0" prefWidth="1240.0" spacing="80.0">
         <children>
            <VBox alignment="CENTER" prefHeight="494.0" prefWidth="1269.0" spacing="30.0">
               <children>
                  <Label alignment="CENTER" text="Total annual salary of each club">
                     <font>
                        <Font name="System Bold" size="21.0" />
                     </font>
                  </Label>
                  <TableView fx:id="salaryTable" prefHeight="500.0" prefWidth="555.0">
                    <columns>
                        <TableColumn fx:id="logoColumn" maxWidth="1500.0" prefWidth="40.0" style="-fx-alignment: CENTER;" />
                      <TableColumn fx:id="clubColumn" prefWidth="281.0" style="-fx-alignment: CENTER;" text="Club" />
                      <TableColumn fx:id="salaryColumn" prefWidth="296.0" style="-fx-alignment: CENTER;" text="Salary" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="494.0" prefWidth="1257.0" spacing="30.0">
               <children>
                  <Label alignment="CENTER" text="Club-wise player counts">
                     <font>
                        <Font name="System Bold" size="21.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="40.0" right="40.0" />
         </VBox.margin>
      </HBox>
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Back to club statistics" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
